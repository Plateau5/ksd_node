<script type="text/javascript" src="{{markUri}}/static/dialog/dialog-layer.js"></script>
<script src="{{markUri}}/static/cropper/cropper.js"></script>
<script src="{{markUri}}/static/wangEditor-3.1.1/wangEditor.js"></script>
<script src="https://imgcache.qq.com/open/qcloud/js/vod/sdk/ugcUploader.js" type="text/javascript" charset="UTF-8"></script>
<script>
    (function ($) {
        var RESETPHOTO = false;
        var elem = {
            internal : $('#internal'),//内部
            external : $('#external'),//外部
            userPhoto : $('#user_photo'),
            uploadBtn : $("#upload_photo_btn"),
            fileInput : $("#upload_photo_file"),
            uploadDia : $('#upload_photo_dialog'),
            mask : $(".mask"),
            photo : $(".large_photo>img"),
            cancel : $(".btn_box .cancel_upload"),
            confirm : $(".btn_box .submit_upload"),
            reChooseImg : $(".choose_img"),
            search_name : $('.search_name')
        };
        //上传图片按钮的点击事件
        function uploadPhoto (ele) {
            ele.off("click").on("click", function () {
                elem.fileInput.click();
            });
        }
        //重新上传图片
        uploadPhoto(elem.reChooseImg);
        elem.photo.cropper({
            zoomable: true,
            viewMode: 1,
            preview: '#small_photo', //不同尺寸预览区
            aspectRatio: 1.5, //裁剪比例，NaN-自由选择区域
            autoCropArea: 0.8, //初始裁剪区域占图片比例
            cropBoxResizable  : false,
            modal : false
        });
        //选择图片后的事件
        elem.fileInput.on('change', function () {
            var file = this.files[0];
            fileName = file.name;
            var reader = new FileReader();
            //reader回调，重新初始裁剪区
            reader.onload = function(){
                // 通过 reader.result 来访问生成的 DataURL
                var url = reader.result;
                //选择图片后重新初始裁剪区
                elem.photo.cropper('reset', true).cropper('replace', url);
            };
            reader.readAsDataURL(file);
            elem.uploadDia.show();
            elem.mask.show();
        });

        //取消按钮的点击事件
        elem.cancel.off("click").on("click", function () {
            elem.uploadDia.hide();
            elem.mask.hide();
        });
        //确定按钮的点击事件
        elem.confirm.off("click").on("click", function () {
            elem.uploadDia.hide();
            elem.mask.hide();
            var canVas = elem.photo.cropper("getCroppedCanvas", {});
            //将裁剪的图片加载到face_image
            elem.userPhoto.attr('background-image', canVas.toDataURL());
            RESETPHOTO = true;
        });
        /************************搜索讲师姓名 start****************************/
        //搜索讲师姓名
        //模糊查询
        var hideInput = $('#orderCreatorId');
        var btn = $('#createName');
        var resBox = $(".search_result");
        var resList = $(".search_list");
        function searchTeacher () {
            elem.search_name.off("click").on("click", function (e) {
                var ev = e || window.event;
                ev.stopPropagation();
                ev.preventDefault();
                resBox.show();
                $('.customer_search').focus();
                $('.customer_search').on('input',function(e){
                    var ev = e || window.event;
                    ev.stopPropagation();
                    var val = $.trim($(this).val());
                    resList.html('');
                    if (val) {
                        resList.show();
                        var queryObj = fuzzyQuery(emp_list);
                        showSearchResult(queryObj);
                        selectedCreate();
                    } else{
                        resList.hide();
                    }
                });
                $(document).on('click',function (e) {
                    var ev = e || window.event;
                    ev.stopPropagation();
                    var target = $(ev.target);
                    var parent = target.parents('.search_result');
                    if (target.hasClass('search_result')) {
                        return false;
                    } else if (parent.length <= 0) {
                        resBox.hide().find('.search_list').html('').end().find('.customer_search').val('');
                        resList.hide();
                        return true;
                    } else {
                        return true;
                    }
                });
            });
            // 订单所属人选中逻辑
            var selectedCreate = function () {
                $('.search_result .res_item').on('click', function () {
                    var _this = $(this);
                    var createName = $.trim(_this.data('name'));
                    var orderCreatorId = $.trim(_this.data('id'));
                    $('.customer_search').val(createName);
                    btn.val(createName);
                    hideInput.val(orderCreatorId);
                    resBox.hide();
                });
            }
        }
        // 讲师的模糊查询功能
        function fuzzyQuery (res) {
            var queryStr = $.trim($('.customer_search').val()),
                queryArr = queryStr.split(""),
                data = res,
                resArr;
            if(queryStr) {
                for (var i = 0, len = queryArr.length; i < len; i++) {
                    resArr = [];
                    for (var k = 0; k < data.length; k++) {
                        if (data[k].name.indexOf(queryArr[i]) != -1) {
                            resArr.push(data[k]);
                        }
                    }
                    data = resArr;
                }
                return resArr;
            }
        }
        //创建模糊查询结果展示并绑定事件
        function showSearchResult (res) {
            var html = [];
            if (res == undefined || res.length == 0 || res.length == undefined) {
                return $('.search_list').html('<li style="text-align: center;">没有匹配到任何结果</li>');
            } else {
                for (var i = 0, len = res.length; i < len; i++) {
                    var str = '';
                    str = '<li class="res_item"  data-id="' + res[i].id + '" data-name="' + res[i].name + '" title="' + res[i].account + '">\
                                <div class="name nowrap">' + res[i].name + '</div>\
                                <div class="p_dep nowrap">' + (res[i].account ? res[i].account : '没有匹配到任何结果') + '</div>\
                            </li>'
                    html.push(str);
                    $('.search_list').html(html.join(""));
                }
            }
        }
        /************************搜索讲师姓名 end****************************/

        /****************课程简介 start*****************/
        var wangEditor = window.wangEditor;

        var courseIntro = new wangEditor('#courseIntro');
        // 自定义菜单配置
        courseIntro.customConfig.menus = [
            'head',  // 标题
            'bold',  // 粗体
            'fontSize',  // 字号
            'italic',  // 斜体
            'underline',  // 下划线
            'backColor',  // 背景颜色
            'link',  // 插入链接
            'list',  // 列表
            'justify',  // 对齐方式
            'image',  // 插入图片
            'table',  // 表格
        ];
        // 隐藏“网络图片”tab
        courseIntro.customConfig.showLinkImg = false;
        courseIntro.customConfig.uploadFileName = 'file';
        courseIntro.customConfig.uploadImgTimeout = 10000;
        courseIntro.customConfig.uploadImgServer = '/api/file/upload';
        courseIntro.customConfig.uploadImgHooks = {
            before: function (xhr, editor, files) {

            },
            success: function (xhr, editor, result) {
                result.errno = result.error_code;
                console.log(result);
            },
            fail: function (xhr, editor, result) {
                result.errno = result.error_code;
            },
            customInsert: function (insertImg, result, editor) {
                console.log(JSON.stringify(result));
                var url = result.data[0].image_url;
                insertImg(url);
            }
        };
        courseIntro.create();
        /*document.getElementById('btn1').addEventListener('click', function () {
            console.log(courseIntro.txt.html());
        }, false);*/
        /******************课程简介 end*******************/



        /***********音视频上传  start***********/
        function uploadBtn() {
            $('#upload_video').on('click', function () {
                $('#uploadVideoNow-file').click();
            });
            $('#upload_audio').on('click', function () {
                $('#uploadVideoNow-file').click();
            });
        }
        var index = 0;
        var cosBox = [];
        /**
         * 计算签名
         **/
        var getSignature = function(callback){
            $.ajax({
                url: 'https://xzb.qcloud.com/get_vod_sign',
                data: JSON.stringify({
                    "Action":"GetVodSignatureV2"
                }),
                type: 'POST',
                dataType: 'json',
                success: function(res){
                    if(res.data && res.data.signature) {
                        callback(res.data.signature);
                    } else {
                        return '获取签名失败';
                    }

                }
            });
        };
        /**
         * 添加上传信息模块
         */
        var addUploaderMsgBox = function(){
            /*var html = '<div class="uploaderMsgBox" name="box'+index+'">' +
                    '视频名称：<span name="videoname'+index+'"></span>；' +
                    '计算sha进度：<span name="videosha'+index+'">0%</span>；' +
                    '上传进度：<span name="videocurr'+index+'">0%</span>；' +
                    'fileId：<span name="videofileId'+index+'">   </span>；' +
                    '上传结果：<span name="videoresult'+index+'">   </span>；<br>' +
                    '地址：<span name="videourl'+index+'">   </span>；</div>';
            $('#resultBox').append(html);*/
            $('.upload_process').show();
            return index++;
        };
        $('#uploadVideoNow-file').on('change', function (e) {
            var num = addUploaderMsgBox();
            var videoFile = this.files[0];
            $('#result').append(videoFile.name +　'\n');
            var resultMsg = qcVideo.ugcUploader.start({
                videoFile: videoFile,
                getSignature: getSignature,
                allowAudio: 1,
                success: function(result){
                    $alert('上传成功');
                    $('.process_close').show();
                },
                error: function(result){
                    if(result.type == 'video') {
                        $alert('上传失败>>'+result.msg);
                        //$('[name=videoresult'+num+']').text('上传失败>>'+result.msg);
                    }
                },
                progress: function(result){
                    if(result.type == 'video') {
                        $('.video_name').html(result.name);
                        $('.process_mask').width(Math.floor(result.shacurr*100)+'%');
                        //$('[name=videoname'+num+']').text(result.name);
                        //$('[name=videosha'+num+']').text(Math.floor(result.shacurr*100)+'%');
                        //$('[name=videocurr'+num+']').text(Math.floor(result.curr*100)+'%');
                        //$('[name=cancel'+num+']').attr('taskId', result.taskId);
                        cosBox[num] = result.cos;
                    }
                },
                finish: function(result){
                    $alert('123')
                    // $('[name=videofileId'+num+']').text(result.fileId);
                    // $('[name=videourl'+num+']').text(result.videoUrl);
                    // if(result.message) {
                    //     $('[name=videofileId'+num+']').text(result.message);
                    // }
                }
            });
            if(resultMsg){
                $('[name=box'+num+']').text(resultMsg);
            }
            $('#upload_video_form')[0].reset();
        });

        /***********音视频上传  end***********/

        //删除视频
        function deleteVidebtn () {
            var btn = $('.process_close');
            btn.off('click').on('click', function () {
                $('#resultBox').hide();
                $('.process_mask').width(0);
                $('.process_close').hide();
                $('.video_name').html('视频上传中......');
            });
        }

        //下拉三角点击事件
        function clickTriangle () {
            var triangle = $('.triangle');
            triangle.off("click").on("click", function () {
                selectCourseType();
            });
        }

        //选择课程分类
        function selectCourseType () {
            var course_type = $('.course_type');
            var coursetype_box = $('.coursetype_box');
            course_type.off("click").on("click", function () {
                coursetype_box.show();

                $(document).on('click',function (e) {
                    var ev = e || window.event;
                    ev.stopPropagation();
                    var target = $(ev.target);
                    var siblings = target.siblings('.coursetype_box');
                    if (siblings.hasClass('coursetype_box')) {
                        return false;
                    } else if (siblings.length <= 0) {
                        coursetype_box.hide();
                        return true;
                    } else {
                        return true;
                    }
                });
            });
            // 课程分类选中逻辑
            $('.coursetype_box .coursetype_item').on('click', function () {
                // var _this = $(this);
                // var createName = $.trim(_this.data('name'));
                // var orderCreatorId = $.trim(_this.data('id'));
                // $('.customer_search').val(createName);
                // btn.val(createName);
                // hideInput.val(orderCreatorId);
                coursetype_box.hide();
            });
        }

        $(function() {
            clickTriangle();//下拉三角点击事件
            selectCourseType();//选择课程分类
            uploadPhoto(elem.uploadBtn);//重新上传图片
            searchTeacher(); //模糊查询讲师
            uploadBtn();
            deleteVidebtn();//删除视频
        });
    })(jQuery,undefined);
</script>
</html>
