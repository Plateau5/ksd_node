<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>机构详情</title>
    {{include ("./../inc/metaData")}}
    <link rel="stylesheet" href="{{markUri}}/static/css/employee/invite.css"/>
    <link rel="stylesheet" href="{{markUri}}/static/css/employee/listCon.css"/>
    <link rel="stylesheet" href="{{markUri}}/static/css/organization/detail.css"/>
    <link rel="stylesheet" href="{{markUri}}/static/dialog/dialog-layer.css">
</head>
<style>
    .org_create_info{
        height: 30px;
        line-height: 30px;
    }
    .edit_org{
        top: 45px;
    }
</style>
<body>

<!--header start-->
{{include ('./../inc/header')}}
<script src="{{markUri}}/static/dialog/dialog-layer.js" type="text/javascript" charset="UTF-8"></script>
<!--header end-->

<!--container start-->

<div class="container minWidth">
    <div class="row section">
        <!--navLeft start-->
        {{include ('./../inc/sideNav')}}
        <!--navLeft end-->


        <!--inviteCon start-->

        <div class="listCon">
            <div class="inviteCon">
                <ul>
                    <li class="inline colorB"><a class="TS" href="{{markUri}}/supplier/organization/system">机构管理</a></li>
                    <li class="inline before"><a href="javascript:;">{{vo.name}}</a></li>
                </ul>
            </div>
            <!--form start-->
            <div class="col-sm-12 col-md-12 col-lg-12" style="padding:0;margin-bottom:80px;">
                <div class="product_detail_header">
                    <div class="header_left">
                        <div class="header_left_img">
                            <img src="{{vo.image_url}}" alt="">
                        </div>
                        <div class="header_txt">
                            <div class="header_txt_top">{{vo.name}}</div>
                            <div class="header_txt_bottom">
                                {{#if (vo.applyto_business.indexOf('0') !== -1) }}
                                    <div class="header_txt_bottom1">新车</div>
                                {{/if}}
                                {{#if (vo.applyto_business.indexOf('1') !== -1) }}
                                    <div class="header_txt_bottom2">二手车</div>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                    <div class="header_right org_create_info">
                        <div class="header_time">{{vo.create_time}}</div>
                        <div class="header_personal">
                            创建人：<span>{{vo.create_name}}</span>
                        </div>
                    </div>
                    {{#if (verifyCode(1070)) }}
                        <div class="inviteP cursor inline edit_org" id="editOrg" lang="{{vo.id}}">
                            <img  style="margin-right:5px;margin-top:-2px;" src="{{markUri}}/static/img/product/edit_white_icon.png" alt="">
                            <span>编辑机构</span>
                        </div>
                    {{/if}}

                    {{#if (verifyCode(1073)) }}
                    <div class="inviteP cursor inline delete_org delete_btn" id="delete_org" lang="{{vo.id}}">
                        <img  style="margin-right:5px;margin-top:-2px;" src="{{markUri}}/static/img/product/delete_white_icon.png" alt="">
                        <span>删除机构</span>
                    </div>
                    {{/if}}
                </div>
                <div class="product_detail_box">
                    <div class="detail_title">
                        <div class="detail_line"></div>
                        <div class="detail_title_txt">机构信息</div>
                    </div>
                    <div class="detail_about">
                        {{#if (vo.type !== null) }}
                            <div class="detail_about_txt">
                                <div class="detail_about_label">机构类别：</div>
                                <div class="detail_about_date">
                                    {{#if (vo.type === 1) }}融资租赁{{/if}}
                                    {{#if (vo.type === 2) }}银行{{/if}}
                                    {{#if (vo.type === 3) }}信托{{/if}}
                                    {{#if (vo.type === 4) }}汽车金融{{/if}}
                                    {{#if (vo.type === 5) }}担保公司{{/if}}
                                </div>
                            </div>
                        {{/if}}
                        <div class="detail_about_txt">
                            <div class="detail_about_label">产品数量：</div>
                            <div class="detail_about_date">{{vo.product_count}}</div>
                        </div>

                        <div class="detail_about_txt">
                            <div class="detail_about_label">系统地址：</div>
                            <div class="detail_about_date">
                                {{#if (!vo.system_url && vo.system_url !== 0) }}
                                --
                                {{else}}
                                    <a href="{{vo.system_url}}" target="_blank" style="color:#72ACE3;">{{vo.system_url}}</a>
                                {{/if}}
                            </div>
                        </div>
                        {{#if (vo.mobile !== null && vo.mobile !== '') }}
                            <div class="detail_about_txt">
                                <div class="detail_about_label">官方电话：</div>
                                <div class="detail_about_date">
                                    {{vo.mobile }}
                                </div>
                            </div>
                        {{/if}}
                        {{#if (vo.link_name !== null && vo.link_name !== '')}}
                            <div class="detail_about_txt">
                                <div class="detail_about_label">联系人：</div>
                                <div class="detail_about_date">
                                    {{vo.link_name }}
                                </div>
                            </div>
                        {{/if}}
                        {{#if (vo.link_phone !== null && vo.link_phone !== '') }}
                            <div class="detail_about_txt">
                                <div class="detail_about_label">联系人手机：</div>
                                <div class="detail_about_date">
                                    {{vo.link_phone }}
                                </div>
                            </div>
                        {{/if}}
                        {{#if (vo.link_mobile !== null && vo.link_mobile !== '') }}
                            <div class="detail_about_txt">
                                <div class="detail_about_label">联系人座机：</div>
                                <div class="detail_about_date">{{vo.link_mobile }}</div>
                            </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
</body>
<script type="text/javascript">
    (function () {

        //编辑机构
        function editOrg () {
            var btn = $("#editOrg");
            btn.off("click").on("click", function () {
                var t = $(this);
                var orgId = $.trim(t.attr("lang"));
                locationTo({
                    action : contextPath + markUri + "/supplier/organization/edit",
                    param : {
                        id : orgId
                    }
                });
            });
        }
        $(function () {
            editOrg();
        });

        //删除机构按钮的点击事件
        function deleteOrg () {
            var delBtn = $(".delete_org");
            delBtn.each(function () {
                var t = $(this);
                t.off("click").on("click", function () {
                    var orgId = $.trim($(this).parents('.org_mask').attr("lang"));
                    var data = {
                        id : orgId
                    };
                    dialog('open', {
                        title : '删除提醒',
                        content : '<div style="padding: 20px 0 20px;line-height:30px;font-size: 14px;"><span>删除后此机构下的产品也将删除，删除后将不可恢复，</span><br><span>确认继续删除？</span></div>',
                        onConfirm : function (d) {
                            delConfirm(data, d);
                        }
                    })
                });
            });
            //确定删除
            function delConfirm (datas, d) {
                var data = datas;
                var url  = contextPath + "/api/organization/delete";;
                $ajax('post',url, data, function (req) {
                    var res = eval(req);
                    if (res.error_code == 0) {
                        d.close();
                        $alert('删除成功', function () {
                            window.location.reload();
                        });
                    }
                }, function () {
                    d.close();
                    $alert('删除失败，请稍后重试');
                });
            }
        }
        $(function() {
            deleteOrg();
        });
    })(window, undefined);
</script>
</html>