<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>机构详情</title>
    {{include ("./../inc/cssSources")}}
    <link rel="stylesheet" href="{{markUri}}/static/css/employee/listCon.css"/>
    <link rel="stylesheet" href="{{markUri}}/static/css/organization/detail.css"/>
    <link rel="stylesheet" href="{{markUri}}/static/dialog/dialog-layer.css">
</head>

<body>
<div id="wrapper" class="wrapper">
    <!-------- Part of header Begin -------->
    {{include ('./../inc/header')}}
    <!-------- Part of header End -------->

    <!-------- Part of main Begin -------->
    <div id="section" class="section normal_width">
        <!---- Part of slide nav Begin ---->
        {{include ('./../inc/sideNav')}}
        <!---- Part of slide nav End ---->

        <!---- Part of Main info Begin ---->
        <div id="main" class="main">
            <div class="crumbs_nav">
                <a href="{{markUri}}/supplier/organization/system" class="crumbs_item">机构管理</a>
                <a href="javascript:;" class="crumbs_item">{{vo.name}}</a>
            </div>
            <div class="product_detail_header">
                {{include ('./../inc/merchantInfos')}}
                {{#if (verifyCode(1073)) }}
                <div class="inviteP cursor inline delete_org delete_agency" id="delete_org" lang="{{vo.id}}">
                    <img  style="margin-right:5px;margin-top:-2px;" src="{{markUri}}/static/img/product/delete_white_icon.png" alt="">
                    <span>删除机构</span>
                </div>
                {{/if}}
            </div>

            <div class="tab">
                <ul class="tab_list inline_block">
                    <li class="tab_item type_normal {{#if (vo.type === 1) }}active{{/if}}" data-type="1">基本信息</li>
                    <li class="tab_item type_others {{#if (vo.type === 2) }}active{{/if}}" data-type="2">进件资料</li>
                    <li class="tab_item type_others {{#if (vo.type === 3) }}active{{/if}}" data-type="3">请款资料</li>
                    <li class="tab_item type_others {{#if (vo.type === 4) }}active{{/if}}" data-type="4">归档资料</li>
                </ul>
            </div>
            <form action="{{markUri}}/supplier/organization/detail" method="POST" id="form_search" role="form">
                <input type="hidden" name="id" value="{{vo.id}}">
                <input type="hidden" name="type" value="{{vo.type}}" id="flow_type">
            </form>
            <div class="product_detail_box">
                <div class="rf_30">
                    <a href="javascript:" id="editOrg_jump" class="detail_title_btn edit_btn edit_rebate_type" lang="{{vo.id}}" data-type="3">编辑</a>
                </div>
                {{#if (vo.type === 1) }}
                <div class="detail_about" style="display:block">
                {{else}}
                <div class="detail_about" style="display:none">
                {{/if}}
                    {{#if (vo.type !== null) }}
                    <div class="detail_about_txt">
                        <div class="detail_about_label">机构类别：</div>
                        <div class="detail_about_date">
                            {{#if (vo.type === 1) }}融资租赁{{/if}}
                            {{#if (vo.type === 2) }}银行{{/if}}
                            {{#if (vo.type === 3) }}信托{{/if}}
                            {{#if (vo.type === 4) }}汽车金融{{/if}}
                            {{#if (vo.type === 5) }}担保公司{{/if}}
                        </div>
                    </div>
                    {{/if}}
                    <div class="detail_about_txt">
                        <div class="detail_about_label">产品数量：</div>
                        <div class="detail_about_date">{{vo.product_count}}</div>
                    </div>

                    <div class="detail_about_txt">
                        <div class="detail_about_label">系统地址：</div>
                        <div class="detail_about_date">
                            {{#if (!vo.system_url && vo.system_url !== 0) }}
                            --
                            {{else}}
                            <a href="{{vo.system_url}}" target="_blank" style="color:#72ACE3;">{{vo.system_url}}</a>
                            {{/if}}
                        </div>
                    </div>
                    {{#if (vo.mobile !== null && vo.mobile !== '') }}
                    <div class="detail_about_txt">
                        <div class="detail_about_label">官方电话：</div>
                        <div class="detail_about_date">
                            {{vo.mobile }}
                        </div>
                    </div>
                    {{/if}}
                    {{#if (vo.link_name !== null && vo.link_name !== '')}}
                    <div class="detail_about_txt">
                        <div class="detail_about_label">联系人：</div>
                        <div class="detail_about_date">
                            {{vo.link_name }}
                        </div>
                    </div>
                    {{/if}}
                    {{#if (vo.link_phone !== null && vo.link_phone !== '') }}
                    <div class="detail_about_txt">
                        <div class="detail_about_label">联系人手机：</div>
                        <div class="detail_about_date">
                            {{vo.link_phone }}
                        </div>
                    </div>
                    {{/if}}
                    {{#if (vo.link_mobile !== null && vo.link_mobile !== '') }}
                    <div class="detail_about_txt">
                        <div class="detail_about_label">联系人座机：</div>
                        <div class="detail_about_date">{{vo.link_mobile }}</div>
                    </div>
                    {{/if}}
                </div>
                {{#if (vo.type === 2 || vo.type === 3 || vo.type === 4 ) }}
                <div class="detail_about" style="display:block">
                {{else}}
                <div class="detail_about" style="display:none">
                {{/if}}
                    <div class="detail_about_txt">
                        {{#if (vo.applyto_business.indexOf('0') !== -1) }}
                        <div class="detail_about_label supplier_cartype">新车</div>
                        {{else}}
                        <div class="detail_about_label supplier_cartype">二手车</div>
                        {{/if}}
                    </div>
                    {{#if (vo.type === 2) }}
                    <div class="detail_about_txt">
                        <div class="detail_about_label">身份类：</div>
                        <div class="detail_about_date">xxx</div>
                    </div>
                    <div class="detail_about_txt">
                        <div class="detail_about_label">收入类：</div>
                        <div class="detail_about_date">xxxx</div>
                    </div>
                    <div class="detail_about_txt">
                        <div class="detail_about_label">房产类：</div>
                        <div class="detail_about_date">xxxx</div>
                    </div>
                    <div class="detail_about_txt">
                        <div class="detail_about_label">车辆类：</div>
                        <div class="detail_about_date">xxxx</div>
                    </div>
                    <div class="detail_about_txt">
                        <div class="detail_about_label">公户类：</div>
                        <div class="detail_about_date">xxxx</div>
                    </div>
                    <div class="detail_about_txt">
                        <div class="detail_about_label">收入类：</div>
                        <div class="detail_about_date">xxxx</div>
                    </div>
                    {{/if}}
                    {{#if (vo.type === 3) }}
                    <div class="detail_about_txt">
                        <div class="detail_about_label">发票类：</div>
                        <div class="detail_about_date">xxxx</div>
                    </div>
                    <div class="detail_about_txt">
                        <div class="detail_about_label">保单类：</div>
                        <div class="detail_about_date">xxxx</div>
                    </div>
                    <div class="detail_about_txt">
                        <div class="detail_about_label">合同类：</div>
                        <div class="detail_about_date">xxxx</div>
                    </div>
                    <div class="detail_about_txt">
                        <div class="detail_about_label">见证类：</div>
                        <div class="detail_about_date">xxxx</div>
                    </div>
                    <div class="detail_about_txt">
                        <div class="detail_about_label">GPS类：</div>
                        <div class="detail_about_date">xxxx</div>
                    </div>
                    <div class="detail_about_txt">
                        <div class="detail_about_label">极致附加类：</div>
                        <div class="detail_about_date">xxxx</div>
                    </div>
                    <div class="detail_about_txt">
                        <div class="detail_about_label">产证类：</div>
                        <div class="detail_about_date">xxxx</div>
                    </div>
                    {{/if}}
                    {{#if (vo.type === 4) }}
                    <div class="detail_about_txt">
                        <div class="detail_about_label">申请类：</div>
                        <div class="detail_about_date">xxxx</div>
                    </div>
                    <div class="detail_about_txt">
                        <div class="detail_about_label">合同类：</div>
                        <div class="detail_about_date">xxxx</div>
                    </div>
                    <div class="detail_about_txt">
                        <div class="detail_about_label">票据类：</div>
                        <div class="detail_about_date">xxxx</div>
                    </div>
                    <div class="detail_about_txt">
                        <div class="detail_about_label">身份类：</div>
                        <div class="detail_about_date">xxxx</div>
                    </div>
                    <div class="detail_about_txt">
                        <div class="detail_about_label">产证类：</div>
                        <div class="detail_about_date">xxxx</div>
                    </div>
                    <div class="detail_about_txt">
                        <div class="detail_about_label">公户类：</div>
                        <div class="detail_about_date">xxxx</div>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
</body>
{{include ('./../inc/jsSources')}}
<script src="{{markUri}}/static/dialog/dialog-layer.js" type="text/javascript" charset="UTF-8"></script>
<script>
    (function ($) {
        // tab标签的切换
        function switchTab () {
            var btn = $('.tab_item');
            btn.on('click', function () {
                var _this = $(this);
                _this.addClass('active');
                if (_this.hasClass('type_normal')) {
                    _this.siblings('.type_others').removeClass('active');
                } else {
                    _this.siblings('.type_normal').removeClass('active');
                }
                $('#flow_type').val(_this.attr('data-type'));
                $('#editOrg_jump').attr('data-type',_this.attr('data-type'));
                $('form[role="form"]').submit();
            });
        }

        //编辑机构
        function editOrg () {
            var btn = $("#editOrg_jump");
            btn.off("click").on("click", function () {
                var t = $(this);
                var orgId = $.trim(t.attr("lang"));
                if (t.attr('data-type') == 1) {
                    var url = "/supplier/organization/edit";//基本信息
                } else {
                    var url = "/supplier/organization/intoPieces";//进件、请款、归档
                }
                locationTo({
                    action : contextPath + markUri + url,
                    param : {
                        id : orgId
                    }
                });
            });
        }

        //删除机构按钮的点击事件
        function deleteOrg () {
            var delBtn = $("#delete_org");
            delBtn.each(function () {
                var t = $(this);
                t.off("click").on("click", function () {
                    var orgId = $.trim(t.attr("lang"));
                    var data = {
                        id : orgId
                    };
                    dialog('open', {
                        title : '删除提醒',
                        content : '<div style="padding: 20px 0 20px;line-height:30px;font-size: 14px;"><span>删除后此机构下的产品也将删除，删除后将不可恢复，</span><br><span>确认继续删除？</span></div>',
                        onConfirm : function (d) {
                            delConfirm(data, d);
                        }
                    })
                });
            });
            //确定删除
            function delConfirm (datas, d) {
                var data = datas;
                var url  = contextPath + "/api/organization/delete";
                var orgId = $.trim($(this).attr("lang"));
                $ajax('post',url, data, function (req) {
                    var res = eval(req);
                    if (res.error_code == 0) {
                        d.close();
                        $alert('删除成功', function () {
                            locationTo({
                                action :contextPath + markUri + "/supplier/organization/list",
                                param : {
                                    orgId :orgId,
                                }
                            });
                        });
                    }
                }, function () {
                    d.close();
                    $alert('删除失败，请稍后重试');
                });
            }
        }

        $(function() {
            switchTab();
            deleteOrg();
            editOrg();
        });
    })(jQuery,undefined);
</script>

</html>